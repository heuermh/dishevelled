<?xml version="1.0" encoding="ISO-8859-1"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.dishevelled</groupId>
    <artifactId>dsh-parent</artifactId>
    <version>4-SNAPSHOT</version>
    <relativePath>../parent/pom.xml</relativePath>
  </parent>
  <artifactId>${artifactId}</artifactId>
  <packaging>jar</packaging>
  <name>dishevelled.org ${artifactId.substring(4)}</name>
  <version>1.0-SNAPSHOT</version>
  <description>${description}</description>
  <url>http://www.dishevelled.org/${artifactId.substring(4)}</url>
  <inceptionYear>2013</inceptionYear>
  <scm>
    <connection>scm:svn|https://svn.code.sf.net/p/dishevelled/code/trunk/${artifactId.substring(4)}</connection>
    <developerConnection>scm:svn|https://svn.code.sf.net/p/dishevelled/code/trunk/${artifactId.substring(4)}</developerConnection>
    <url>https://svn.code.sf.net/p/dishevelled/code/trunk/${artifactId.substring(4)}</url>
  </scm>
  <distributionManagement>
    <site>
      <id>dishevelled.sf.net</id>
#set($dollar = '$')
      <url>scp://shell.sourceforge.net/home/project-web/dishevelled/htdocs/${artifactId.substring(4)}-${dollar}{project.version}</url>
    </site>
  </distributionManagement>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <jdk.version>1.6</jdk.version>
  </properties>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-checkstyle-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <!-- todo:  must manually update the copyright dates here -->
          <bottom>Copyright (c) 2013 held jointly by the individual authors. Licensed under the &lt;a href="http://www.fsf.org/licensing/licenses/lgpl.html"&gt;GNU Lesser General Public License&lt;a&gt; (LGPL).</bottom>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jxr-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>cobertura-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>
</project>
